<mvc:View controllerName="skilltrackerui5.controller.App"
displayBlock="true"
xmlns:layout="sap.ui.layout"
xmlns:uxap="sap.uxap"	
xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc">

    <uxap:ObjectPageLayout 
    showTitleInHeaderContent="true" 
    showHeaderContent="true" 
    showAnchorBar="true" showFooter="false" 
    subSectionLayout="TitleOnTop">
        <uxap:headerContent>
            <VBox 
            alignItems="Stretch" 
            direction="Column" 
            fitContainer="false" 
            width="auto" 
            height="auto" 
            justifyContent="Start" 
            renderType="Div" 
            visible="true" 
            displayInline="false">
                <items>
                    <Link 
                    text="+33 6 1555 5353" 
                    textAlign="Begin" 
                    width="auto" 
                    target="_blank" 
                    wrapping="false" enabled="true" visible="true" emphasized="false" subtle="false"/>
                    <Link 
                    text="test@sap.com" 
                    textAlign="Begin" 
                    width="auto" 
                    target="_blank" 
                    wrapping="false" enabled="true" visible="true" emphasized="false" subtle="false"/>
                </items>
                <layoutData/>
            </VBox>
            <Label 
            text="Hello and Welcome!" 
            design="Standard" 
            width="100%" 
            required="false" 
            textAlign="Begin" 
            textDirection="Inherit" 
            visible="true"/>
        </uxap:headerContent>
        <uxap:headerTitle>
            <uxap:ObjectPageHeader 
            objectTitle="Employee Name" 
            objectSubtitle="Job title" 
            headerDesign="Light" 
            objectImageShape="Square" 
            isObjectIconAlwaysVisible="false" 
            isObjectTitleAlwaysVisible="false" 
            isObjectSubtitleAlwaysVisible="false" 
            isActionAreaAlwaysVisible="true">
                <uxap:actions>
                    <Button 
                    text="" 
                    type="Transparent" 
                    icon="sap-icon://edit" 
                    iconFirst="true" 
                    width="auto" 
                    enabled="true" 
                    visible="true" 
                    iconDensityAware="false"/>
                </uxap:actions>
                <uxap:breadCrumbsLinks/>
                <uxap:navigationBar/>
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>
        <uxap:sections>
            <uxap:ObjectPageSection 
            showTitle="true" 
            title="Page Section Title" 
            titleUppercase="true" 
            visible="true">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection 
                    title="Skills" 
                    mode="Expanded">
                        <uxap:blocks>
                            <Label 
                            text="text under Skills tab" 
                            design="Standard" 
                            width="100%" 
                            required="false" 
                            textAlign="Begin" textDirection="Inherit" visible="true"/>
                        </uxap:blocks>
                        
                        <uxap:moreBlocks/>
                        <uxap:blocks>
                        
                        </uxap:blocks>
                        <uxap:actions/>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
                <uxap:customAnchorBarButton/>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection 
            showTitle="true" 
            title="Page Section Title" 
            titleUppercase="true" 
            visible="true">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection 
                    title="Projects" 
                    mode="Expanded">
                        <uxap:blocks>
                            <Label 
                            text="Text under projects tab" 
                            design="Standard" 
                            width="100%" 
                            required="false" 
                            textAlign="Begin" 
                            textDirection="Inherit" 
                            visible="true"/>
                        </uxap:blocks>
                        <uxap:moreBlocks/>
                        <uxap:actions/>
                    </uxap:ObjectPageSubSection>
                    
                </uxap:subSections>
                <uxap:customAnchorBarButton/>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <uxap:footer>
            <OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
                <content>
                    <ToolbarSpacer width=""/>
                    <Button 
                    text="Approve" 
                    type="Accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                    <Button 
                    text="Reject" 
                    type="Reject" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                    <OverflowToolbarButton text="Action" type="Default" icon="sap-icon://action" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                </content>
            </OverflowToolbar>
        </uxap:footer>
            </uxap:ObjectPageLayout>

</mvc:View>
